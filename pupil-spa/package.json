{
  "name": "pupil-spa",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "ng": "ng",
    "sass": "node-sass -r src/assets/shared-styles/ -o src/public/styles/",
    "sasswatch": "npm run sass && node-sass src/assets/shared-styles -wro src/public/styles/",
    "start": "concurrently \"ng serve\" \"npm run sasswatch\" ",
    "startwithgovuk": "node tools/copyGovukFrontendToolkit && node tools/copyGovukElements && ng serve",
    "build": "ng build",
    "test": "ng test",
    "test-single": "ng test --single-run=true --browsers ChromeHeadless",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copygovuktoolkit": "node tools/copyGovukFrontendToolkit",
    "copygovukelements": "node tools/copyGovukElements",
    "postinstall": "node tools/copyGovukFrontendToolkit && node tools/copyGovukElements"
  },
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/router": "^4.4.6",
    "core-js": "^2.5.3",
    "ngx-logger": "^0.2.6",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.8",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/language-service": "^4.4.6",
    "@types/jasmine": "^2.8.6",
    "@types/jasminewd2": "^2.0.3",
    "@types/node": "^8.9.0",
    "codelyzer": "^4.1.0",
    "concurrently": "^3.5.1",
    "fs-extra": "^4.0.3",
    "govuk-elements-sass": "^3.1.1",
    "gulp": "^3.9.1",
    "gulp-string-replace": "^0.4.0",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.4.1",
    "karma-jasmine": "^1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "node-sass": "^4.7.2",
    "node-sass-utils": "^1.1.2",
    "protractor": "^5.3.0",
    "replace-in-file": "^3.1.0",
    "sass-loader": "^6.0.6",
    "ts-node": "~3.3.0",
    "tslint": "~5.8.0",
    "typescript": "~2.3.3"
  }
}
