{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "types": ["node"],
    "noImplicitAny": true, // TODO: move to root once specs are refactored
    "noImplicitReturns": false, // TODO: move to true
    "allowUnreachableCode": false,
    "alwaysStrict": false, // TODO: set to true
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": false, // TODO: move to true
    "strictFunctionTypes": false, // TODO: move to true
    "strictNullChecks": false // TODO: move to true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
