<div class="govuk-organisation-container" aria-describedby="standards-and-testing-agency">
    <div class="govuk-organisation-logo home">
        <div class="govuk-logo-text" id="standards-and-testing-agency">Standards<br>&amp; Testing<br>Agency</div>
    </div>
</div>

<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds" aria-describedby="lead-paragraph">
            <h1 class="govuk-heading-xl">Check Development Service</h1>
            <p class="govuk-body govuk-!-font-size-24">Sign-in to access the Check Development Service</p>
            <form action="/sign-in" method="post" aria-label="Sign-in below" autocomplete="off" autocapitalize="none">
                <fieldset class="govuk-fieldset">
                    <div class="govuk-form-group">
                        <label class="govuk-label" for="username">
                            <strong>Username</strong>
                        </label>
                        <input class="govuk-input govuk-!-width-one-half"
                               id="username"
                               name="username"
                               type="text"
                               aria-required="true"
                               aria-label="Enter your user name."
                               spellcheck="false"
                               autocorrect="off">
                    </div>

                    <div class="govuk-form-group">
                        <label class="govuk-label" for="password">
                            <strong>Password</strong>
                        </label>
                        <input class="govuk-input govuk-!-width-one-half"
                               id="password"
                               name="password"
                               type="password"
                               aria-required="true"
                               aria-label="Enter your password."
                               spellcheck="false"
                               autocorrect="off">
                    </div>
                </fieldset>
                <button type="submit" class="govuk-button govuk-button--start govuk-!-margin-top-2">
                    Sign in
                    <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
                        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
                    </svg>
                </button>
            </form>
        </div>
    </div>
</main>
