<div class="grid-row">
    <div class="column-one-half">
        <%- partial('partials/_breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    </div>
    <div class="column-one-half">
        <%- partial('partials/_name_and_sign_out') %>
    </div>
</div>

<div class="grid-row" id="pupils-not-taking-checks" aria-describedby="heading-xlarge">

    <div class="column-two-thirds">
        <% if (messages && messages.length > 0) { %>
        <div class="info-message">
            <%= messages %>
        </div>
        <% } %>

        <h1 class="heading-xlarge" id="heading-xlarge">Pupils not taking the check</h1>

        <p class="lede">Click on the button below to add reasons for pupils who are not taking the check</p>
        <p class="lede">This is a list of pupils who are not taking the check and the reasons why</p>

        <a class="button" href="/school/pupils-not-taking-check/select-pupils">Add reason for pupil</a>

        <% if (pupilsList && pupilsList.length > 0) { %>
        <table class="spacious sorting" id="pupilsList" role="listbox" aria-label="Select pupils.">
            <thead>
                <tr>
                    <th scope="col">Pupil name</th>
                    <th scope="col">Reason</th>
                    <th scope="col">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <% pupilsList.forEach( (pupil, index) => { %>
                <tr>
                    <td<% if (pupil.highlight === true) { %> class="highlight-item"<% } %>>
                        <label for="pupil-<%= pupil._id %>">
                            <%= pupil.lastName %>, <%= pupil.foreName %>
                        </label>
                    </td>
                    <td>
                        <%= pupil.reason %>
                    </td>
                    <td>
                        <a href="/school/pupils-not-taking-check/remove/<%= pupil._id %>">Remove</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
        <p class="padding-top">No pupils found.</p>
        <% } %>

        <br class="clearfix"/>

        <div class="back-to-top-container">
            <a href="#top">Back to top</a>
        </div>
    </div>

    <div class="column-one-third add-title-margin" aria-label="sidebar">
        <aside role="complementary" class="support-column">
            <h3 class="heading-medium">Start check</h3>
            <nav role="navigation">
                <ul class="list">
                    <li>
                        <a href="#">Generate PINs</a>
                    </li>
                </ul>
            </nav>
        </aside>
    </div>
</div>
