<%
const err = error;
const input = (typeof formData !== 'undefined') ? formData : {};
const heading = 'Edit pupil details';
const submitLabel = 'Save';
const headingClass = 'heading-xlarge';
%>

<div class="grid-row">
    <div class="column-one-half">
        <%- partial('partials/_breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    </div>
    <div class="column-one-half">
        <%- partial('partials/_name_and_sign_out') %>
    </div>
    <div class="column-two-thirds">
        <h1 tabindex="0" class="heading-xlarge">Edit pupil details</h1>
    </div>
</div>

<%- partial('school/_pupil-form', {
    input: input,
    err: err,
    school: school,
    formData: input,
    heading: heading,
    submitLabel: submitLabel,
    headingClass: headingClass,
    formHeader: 'Edit'
}) %>
