<%- partial('partials/_gds_breadcrumbs_and_sign_out', { breadcrumbs }) %>
<main class="govuk-main-wrapper" id="main-content" role="main">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl">Manage organisations</h1>
            <%- partial('partials/_gds_session_expiry') %>
            <%- partial('partials/_flash-messages') %>
            <ol class="govuk-list">
                <li>
                    <h2 class="govuk-heading-s"><a class="govuk-link"
                                                   href="/service-manager/organisations/search">Search for an
                            existing organisation</a></h2>
                    <p>Find a school by DFE number or URN</p>
                </li>
                
                <li>
                    <h2 class="govuk-heading-s"><a class="govuk-link"
                                                   href="/service-manager/organisations/upload">Upload
                            organisations</a></h2>
                    <p>Bulk upload organisations</p>
                </li>
                
                <li>
                    <h2 class="govuk-heading-s"><a class="govuk-link"
                                                   href="/service-manager/organisations/add">Add a single
                            organisation</a></h2>
                    <p>Add a new School</p>
                </li>
                
            </ol>
        </div>
        <div class="govuk-grid-column-one-third" aria-label="sidebar">
            <aside class="app-related-items" role="complementary">
                <h2 class="govuk-heading-m" id="subsection-title">
                    Related
                </h2>
                <nav role="navigation" aria-labelledby="subsection-title">
                    <ul class="govuk-list govuk-!-font-size-16">
                        <li>
                            <a class="govuk-link" href="<%- guidancePdf %>" target="_blank" rel="noopener noreferrer">Read the guidance and watch videos</a>
                        </li>
                    </ul>
                </nav>
            </aside>
        </div>
    </div>
</main>
