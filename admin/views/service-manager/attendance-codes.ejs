<%- partial('partials/_gds_breadcrumbs_and_sign_out', { breadcrumbs }) %>
  <main class="govuk-main-wrapper govuk-body" id="main-content" role="main">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Attendance Codes</h1>
        <%- partial('partials/_gds_session_expiry') %>
          <%- partial('partials/_flash-messages') %>
            <% if (attendanceCodes && attendanceCodes.length> 0) { %>
              <table class="govuk-spacious">
                <thead>
                  <th title="Code">Code</th>
                  <th title="Reason">Reason</th>
                  <th title="Order">Order</th>
                  <th title="Visible">Visible</th>
                  <th title="Toggle"></th>
                </thead>
                <tbody class="govuk-body-s">
                  <% for (let i=0; i < attendanceCodes.length; i++) { %>
                    <tr>
                      <td>
                        <%= attendanceCodes[i].code %>
                      </td>
                      <td>
                        <%= attendanceCodes[i].reason %>
                      </td>
                      <td>
                        <%= attendanceCodes[i].order %>
                      </td>
                      <td>
                        <a href="/service-manager/attendance-code-toggle/<%= attendanceCodes[i].id %>">
                          <%= attendanceCodes[i].visible %>
                        </a>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
              <% } %>
      </div>
      <div class="govuk-grid-column-one-third" aria-label="sidebar">
        <aside class="app-related-items" role="complementary">
          <h2 class="govuk-heading-m" id="subsection-title">
            Related
          </h2>
          <nav role="navigation" aria-labelledby="subsection-title">
            <ul class="govuk-list govuk-!-font-size-16">
              <li>
                <a class="govuk-link" href="<%- guidancePdf %>" target="_blank" rel="noopener noreferrer">Read the
                  guidance and watch videos</a>
              </li>
            </ul>
          </nav>
        </aside>
      </div>
    </div>
  </main>
