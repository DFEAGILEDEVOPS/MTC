<% const checkFormTypeFormatted = checkFormType.charAt(0).toUpperCase() + checkFormType.slice(1) %>
<div class="grid-row">
  <div class="column-two-thirds">
    <%- partial('partials/_breadcrumbs', { breadcrumbs: breadcrumbs }) %>
  </div>
  <div class="column-one-third">
    <%- partial('partials/_name_and_sign_out') %>
  </div>
</div>

<form method="post" action="/check-form/assign-form">
  <input type="hidden" name="_csrf" value="<%= csrftoken %>" />
  <div class="grid-row">
    <div class="column-two-thirds">
      <% if (messages && messages.info && messages.info.length) { %>
      <div class="info-message">
        <a href="#anchor-<%= messages.formName %>"><%= messages.info %></a>
      </div>
      <% } %>

      <% if (messages && messages.error && messages.error.length) { %>
      <div class="error-summary" role="group" aria-labelledby="error-summary-heading-1" tabindex="-1">
        <h2 class="heading-medium error-summary-heading" id="error-summary-heading-1">
          <%= messages.error %>
        </h2>
      </div>
      <% } %>

      <h1 class="heading-xlarge"><%= checkWindowData.name %> - Pupil <%= checkFormType %> check period</h1>

      <%- partial('partials/_session_expiry') %>

      <div class="panel panel-border-wide">
          <% if (checkFormData && checkFormData.length) {%>
          <div>Assign forms to <b><%= checkWindowData.name %>, <%= checkFormTypeFormatted %> check</b></div>
          <div><%= checkFormTypeFormatted %> check: <%= checkFormTypeFormatted !== 'Live' ?
            `${checkWindowData.familiarisationCheckStartDate.format('D MMMM')} to ${checkWindowData.familiarisationCheckEndDate.format('D MMMM YYYY')}` :
            `${checkWindowData.checkStartDate.format('D MMMM')} to ${checkWindowData.checkEndDate.format('D MMMM YYYY')}` %>
          </div>
          <% } else if (checkFormData && checkFormData.length === 0) { %>
          There are no available check forms
          <% }%>
      </div>

      <% if (Array.isArray(checkFormData) && checkFormData.length > 0) { %>
      <table class="spacious" id="assignFormToWindowList" role="group">
        <thead>
        <tr>
          <th scope="col">Form name</th>
          <th scope="col">
            <div class="tick-all-checkboxes-wrapper">
              <label class="tick-all-checkboxes" id="selectAll" for="tickAllCheckboxes">Select all</label>
              <label class="tick-all-checkboxes all-hide" id="deselectAll" for="tickAllCheckboxes">Deselect all</label>
              <div class="multiple-choice-mtc">
                <input id="tickAllCheckboxes" name="allForms" type="checkbox" aria-label="Select all Forms.">
                <div></div>
              </div>
            </div>
          </th>
        </tr>
        </thead>
        <tbody>
        <% checkFormData.forEach(checkForm => { %>
        <tr>
          <td>
            <label for="checkForm<%= checkForm.urlSlug %>">
              <%= checkForm.name %>
            </label>
          </td>
          <td class="align-right">
            <div class="multiple-choice-mtc">
              <input id="checkForm<%= checkForm.urlSlug %>"
                     name="checkForm[<%= checkForm.urlSlug %>]"
                     type="checkbox"
                     value="<%= checkForm.urlSlug %>"
                     aria-label="Tick form <%= checkForm.name %>"
                     aria-checked="false"
                     role="checkbox">
              <div></div>
            </div>
          </td>
        </tr>
        <% }) %>
        </tbody>
      </table>
      <input type="hidden" name="checkWindowName" value="<%= checkWindowData.name %>">
      <input type="hidden" name="checkWindowUrlSlug" value="<%= checkWindowData.urlSlug %>">
      <% } %>

      <div class="back-to-top-container">
        <a href="#top">Back to top</a>
      </div>

    </div>

    <div class="column-one-third sidebar" aria-label="sidebar">
    </div>
  </div>
  <%- partial('partials/_sticky_confirmation_banner',
    {
      countingLabel: 'Form(s)',
      cancelLabel: 'Cancel',
      cancelLink: '/check-form/assign-forms-to-check-windows',
      submitLabel: 'Confirm',
      isSubmitDisabled: true
    }) %>
</form>
