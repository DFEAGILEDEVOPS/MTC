<div class="grid-row">
    <div class="column-one-half">
        <%- partial('partials/_breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    </div>
    <div class="column-one-half">
        <%- partial('partials/_name_and_sign_out') %>
    </div>
</div>
<div class="grid-row">
    <div class="column-two-thirds">
        <% if (messages && messages.info) { %>
        <div class="info-message clickable">
            <a href="#<%= highlight %>"><%= messages.info[0] %></a>
        </div>
        <% } %>
        <header class="page-header">
            <h1 class="heading-xlarge">Access arrangements</h1>
        </header>
        <%- partial('partials/_session_expiry') %>
        <p class="lede">
            Modify multiplication tables check for pupils with specific needs. Modifications should be previewed in the pupilâ€™s familiarisation check.
        </p>
    </div>
    <div class="column-one-third sidebar" aria-label="sidebar">
        <aside role="complementary" class="support-column">
            <h3 class="heading-medium">Related</h3>
            <nav role="navigation">
                <ul class="list">
                    <li>
                        <a href="<%- guidancePdf %>" target="_blank" rel="noopener noreferrer">Guidance</a>
                    </li>
                    <li>
                        <a href="/pupil-register/pupils-list">Pupil register</a>
                    </li>
                    <li>
                        <a href="/pupil-pin/generate-familiarisation-pins-overview">PINs for familiarisation check</a>
                    </li>
                    <li>
                        <a href="/pupil-pin/generate-live-pins-overview">PINs for live check</a>
                    </li>
                </ul>
            </nav>
        </aside>
    </div>
</div>

<div class="grid-row">
    <div class="column-two-thirds">
        <form action="/access-arrangements/select-access-arrangements" name="select-pupils-and-arrangements">
            <div class="form-group">
                <div class="form-buttons">
                    <input type="submit" class="button" value="Select pupil and arrangement"/>
                </div>
            </div>
        </form>
    </div>
    <div class="column-two-thirds">
        <%if (pupils.length > 0) { %>
        <table id='submitted-pupil-access-arrangements'>
            <thead>
            <tr>
                <th scope="col">Pupil</th>
                <th scope="col">Arrangement</th>
            </tr>
            </thead>
            <tbody>
            <% pupils.forEach( (pupil) => { %>
            <tr>
                <td class="access-arrangements-pupil-name">
                    <div<% if (highlight && highlight.includes(pupil.urlSlug)) { %> class="highlight-item"<% } %>>
                        <div id="<%= pupil.urlSlug %>">
                            <a href="/access-arrangements/select-access-arrangements/<%= pupil.urlSlug%>"><%= pupil.fullName %></a>
                            <% if (pupil.showDoB) { %>
                            <div class="font-greyed-out font-xsmall">
                                Date of birth: <%= pupil.dateOfBirth %>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </td>
                <td class="pupil-access-arrangements">
                    <% pupil.arrangements && pupil.arrangements.forEach((pupilAccessArrangement, i) => { %>
                        <%if (pupilAccessArrangement.length - 1 !== i && pupilAccessArrangement.length > 1) { %>
                            <span><%= pupilAccessArrangement %></span><br />
                        <% } else { %>
                            <span><%= pupilAccessArrangement %></span>
                        <% } %>
                        <% }) %>
                </td>
            </tr>
            <% }) %>
            </tbody>
        </table>
        <% } else { %>
        No pupils with access arrangements or modifications selected.
        <% } %>
    </div>
</div>

<div class="back-to-top-container">
    <a href="#top">Back to top</a>
</div>
