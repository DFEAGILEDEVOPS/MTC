<% if (typeof countingLabel == 'undefined') { countingLabel = 'Pupils' } %>
<div class="govuk-sticky-banner-wrapper" id="stickyBanner">
    <div id="content">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half first-half">
                <span class="govuk-body no-print"><%= countingLabel %> selected: <span id="totalPupilsSelected"></span></span>
            </div>
            <div class="govuk-grid-column-one-half">
                <button id="stickyConfirm" data-prevent-double-click="true" class="govuk-button govuk-form-button govuk-!-margin-bottom-0 no-print" type="button" data-module="govuk-button">
                    <%= submitLabel %>
                </button>
                <% if (typeof submitPrint !== 'undefined') { %>
                    <script>
                        document.querySelector('#stickyConfirm').onclick = function(event) {
                            event.preventDefault();
                            window.MTCAdmin.printPopup.hideUncheckedPupils('#generatePins');
                            window.print();
                        };
                    </script>
                <% } %>
                <a id="stickyCancel" href="<%= cancelLink %>" role="button" draggable="false" class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0 no-print" data-module="govuk-button">
                    <%= cancelLabel %>
                </a>
            </div>
        </div>
    </div>
</div>

