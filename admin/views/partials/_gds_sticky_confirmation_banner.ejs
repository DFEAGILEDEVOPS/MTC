<% if (typeof countingLabel == 'undefined') { countingLabel = 'Pupils' } %>
<div class="govuk-sticky-banner-wrapper no-print" id="stickyBanner">
    <div id="content">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half first-half">
                <span class="govuk-body"><%= countingLabel %> selected: <span id="totalPupilsSelected"></span></span>
            </div>
            <div class="govuk-grid-column-one-half">
                <button id="stickyConfirm" class="govuk-button govuk-form-button govuk-!-margin-bottom-0" type="button" data-module="govuk-button">
                    <%= submitLabel %>
                </button>
                <a id="stickyCancel" href="<%= cancelLink %>" role="button" draggable="false" class="govuk-button govuk-button--secondary govuk-!-margin-bottom-0" data-module="govuk-button">
                    <%= cancelLabel %>
                </a>
            </div>
        </div>
    </div>
</div>

<% if (typeof submitPrint !== 'undefined') { %>
<script>
    $('#stickyConfirm').click(function (event) {
        event.preventDefault();
        window.GOVUK.printPopup.hideUncheckedPupils('.pupil-print-table');
        window.print();
    });
</script>
<% } %>
