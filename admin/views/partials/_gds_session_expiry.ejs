<% if (isAuthenticated) { %>
    <div class="error-session-expiration govuk-error-summary govuk-top-padding-30" aria-labelledby="error-summary-1" role="alert" tabindex="-1" data-module="error-summary">
        <div class="govuk-error-summary__body">
            <p>Your session will expire in <span class="session-expiration-countdown">5 minutes</span>.</p>
            <p>Would you like to continue this session?</p>
            <button class="govuk-button" id="continue-session-expiration">Yes</button>
        </div>
    </div>
<% } %>
