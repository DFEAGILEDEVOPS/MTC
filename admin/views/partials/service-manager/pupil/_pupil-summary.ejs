<dl class="govuk-summary-list">

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Date of Birth
    </dt>
    <dd class="govuk-summary-list__value">
      <%=pupil.dateOfBirth %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      UPN
    </dt>
    <dd class="govuk-summary-list__value">
      <%=pupil.upn %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Pupil ID
    </dt>
    <dd class="govuk-summary-list__value">
      <%= pupil.id %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      School
    </dt>
    <dd class="govuk-summary-list__value">
      <%= pupil.schoolName %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      DFE Number
    </dt>
    <dd class="govuk-summary-list__value">
      <%= pupil.dfeNumber%>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      URN
    </dt>
    <dd class="govuk-summary-list__value">
      <%=pupil.schoolUrn %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Frozen
    </dt>
    <dd class="govuk-summary-list__value">
      <%=pupil.isFrozen ? 'Frozen' : 'No' %>
    </dd>
  </div>

  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      Status
    </dt>
    <dd class="govuk-summary-list__value">
      <%=pupil.status %>
    </dd>
  </div>
</dl>
