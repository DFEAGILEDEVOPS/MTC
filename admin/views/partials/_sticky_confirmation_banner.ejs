<% if (typeof countingLabel == 'undefined') { countingLabel = 'Pupils' } %>
<div class="sticky-banner-wrapper no-print" id="stickyBanner">
    <div id="content">
        <div class="grid-row">
            <div class="column-half first-half">
                <%= countingLabel %> selected: <span id="totalPupilsSelected"></span>
            </div>
            <div class="column-half">
                <input type="submit" class="button" value="<%= submitLabel %>" id="stickyConfirm">
                <a href="<%= cancelLink %>" class="button-secondary" id="stickyCancel"><%= cancelLabel %></a>
            </div>
        </div>
    </div>
</div>

<% if (typeof submitPrint !== 'undefined') { %>
<script>
    window.addEventListener('load', function() {
      $('#stickyConfirm').click(function (event) {
          event.preventDefault();
          window.GOVUK.printPopup.hideUncheckedPupils('.pupil-print-table');
          window.print();
      });
    });
</script>
<% } %>
