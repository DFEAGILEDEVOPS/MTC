<% if (serviceMessage) {
    let borderColour = 'mtc-notification-banner-blue'
    if (serviceMessage.borderColourCode === 'G') {
        borderColour = 'mtc-notification-banner-green'
    } else if (serviceMessage.borderColourCode === 'R') {
        borderColour = 'mtc-notification-banner-red'
    } else if (serviceMessage.borderColourCode === 'O') {
        borderColour = 'mtc-notification-banner-orange'
    }
    %>
    <div class="<%= borderColour %>" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
      <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
          <%= serviceMessage.title %>
        </h2>
      </div>
      <div class="govuk-notification-banner__content">
        <div class="govuk-notification-banner__heading">
          <%- serviceMessage.message %>
        </div>
      </div>
    </div>
  <% } %>
