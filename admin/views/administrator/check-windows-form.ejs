<div class="grid-row">
    <div class="column-one-half">
        <%- partial('partials/_breadcrumbs', { breadcrumbs: breadcrumbs }) %>
    </div>
    <div class="column-one-half">
        <%- partial('partials/_name_and_sign_out') %>
    </div>
</div>

<div class="grid-row" aria-describedby="heading-xlarge">
    <div class="column-two-thirds" id="checkWindowsForm">

        <% if (typeof successfulPost !== 'undefined' && successfulPost === 'updated') { %>
        <div class="box-successful padding-first-item">
            <h2 class="heading-large">Changes have been saved</h2>
        </div>
        <% } %>

        <h1 class="heading-xlarge" id="heading-xlarge" tabindex="0"><%= actionName %> check window</h1>

        <form action="/administrator/check-windows/<%= urlActionName %>" method="post">
            <div class="form-group">
                <label for="checkWindowName" class="form-label-bold">
                    Name of check window
                    <% if (typeof error !== 'undefined' && error.checkWindowName) { %>
                    <span class="error-message"><%= errorMessage.checkWindowName %></span>
                    <% } %>
                </label>
                <input class="form-control"
                       id="checkWindowName"
                       name="checkWindowName"
                       type="text"
                       value="<%= checkWindowData.checkWindowName %>"
                       aria-required="true"
                       aria-label="Check window name.">
            </div>

            <hr />

            <div class="form-group">
                <label class="form-label-bold">
                    Administration start date
                    <span class="form-hint">For example, 28 4 2017</span>
                    <% if (typeof error !== 'undefined' && error.adminStartDay) { %>
                    <span class="error-message"><%= error.adminStartDay %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' && error.adminStartMonth) { %>
                    <span class="error-message"><%= error.adminStartMonth %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' && error.adminStartYear) { %>
                    <span class="error-message"><%= error.adminStartYear %></span>
                    <% } %>
                </label>
                <div class="form-date">
                    <div class="form-group form-group-day">
                        <label class="form-label" for="adminStartDay">Day</label>
                        <input class="form-control <%= error.adminStartDay ? 'form-control-error' : '' %>"
                               id="adminStartDay"
                               name="adminStartDay"
                               type="number"
                               value="<%= checkWindowData.adminStartDay %>"
                               aria-required="true"
                               aria-label="Administration start day.">
                    </div>
                    <div class="form-group form-group-month">
                        <label class="form-label" for="adminStartMonth">Month</label>
                        <input class="form-control <%= error.adminStartMonth ? 'form-control-error' : '' %>"
                               id="adminStartMonth"
                               name="adminStartMonth"
                               type="number"
                               value="<%= checkWindowData.adminStartMonth %>"
                               aria-required="true"
                               aria-label="Administration start month.">
                    </div>
                    <div class="form-group form-group-year">
                        <label class="form-label" for="adminStartYear">Year</label>
                        <input class="form-control <%= error.adminStartYear ? 'form-control-error' : '' %>"
                               id="adminStartYear"
                               name="adminStartYear"
                               type="number"
                               value="<%= checkWindowData.adminStartYear %>"
                               aria-required="true"
                               aria-label="Administration start year.">
                    </div>
                </div>
            </div>

            <hr />

            <div class="form-group">
                <label class="form-label-bold">
                    Check start date
                    <span class="form-hint">For example, 28 4 2017</span>
                    <% if (typeof error !== 'undefined' &&  error.checkStartDay) { %>
                    <span class="error-message"><%= error.checkStartDay %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' &&  error.checkStartMonth) { %>
                    <span class="error-message"><%= error.checkStartMonth %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' &&  error.checkStartYear) { %>
                    <span class="error-message"><%= error.checkStartYear %></span>
                    <% } %>
                </label>
                <div class="form-date">
                    <div class="form-group form-group-day">
                        <label class="form-label" for="checkStartDay">Day</label>
                        <input class="form-control <%= error.checkStartDay ? 'form-control-error' : '' %>"
                               id="checkStartDay"
                               name="checkStartDay"
                               type="number"
                               value="<%= checkWindowData.checkStartDay %>"
                               aria-required="true"
                               aria-label="Check start day.">
                    </div>
                    <div class="form-group form-group-month">
                        <label class="form-label" for="checkStartMonth">Month</label>
                        <input class="form-control <%= error.checkStartMonth ? 'form-control-error' : '' %>"
                               id="checkStartMonth"
                               name="checkStartMonth"
                               type="number"
                               value="<%= checkWindowData.checkStartMonth %>"
                               aria-required="true"
                               aria-label="Check start month.">
                    </div>
                    <div class="form-group form-group-year">
                        <label class="form-label" for="checkStartYear">Year</label>
                        <input class="form-control <%= error.checkStartYear ? 'form-control-error' : '' %>"
                               id="checkStartYear"
                               name="checkStartYear"
                               type="number"
                               value="<%= checkWindowData.checkStartYear %>"
                               aria-required="true"
                               aria-label="Check start year.">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label-bold">
                    Check end date
                    <span class="form-hint">For example, 28 4 2017</span>
                    <% if (typeof error !== 'undefined' &&  error.checkEndDay) { %>
                    <span class="error-message"><%= error.checkEndDay %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' &&  error.checkEndMonth) { %>
                    <span class="error-message"><%= error.checkEndMonth %></span>
                    <% } %>
                    <% if (typeof error !== 'undefined' &&  error.checkEndYear) { %>
                    <span class="error-message"><%= error.checkEndYear %></span>
                    <% } %>
                </label>
                <div class="form-date">
                    <div class="form-group form-group-day">
                        <label class="form-label" for="checkEndDay">Day</label>
                        <input class="form-control <%= error.checkEndDay ? 'form-control-error' : '' %>"
                               id="checkEndDay"
                               name="checkEndDay"
                               type="number"
                               value="<%= checkWindowData.checkEndDay %>"
                               aria-required="true"
                               aria-label="Check end day.">
                    </div>
                    <div class="form-group form-group-month">
                        <label class="form-label" for="checkEndMonth">Month</label>
                        <input class="form-control <%= error.checkEndMonth ? 'form-control-error' : '' %>"
                               id="checkEndMonth"
                               name="checkEndMonth"
                               type="number"
                               value="<%= checkWindowData.checkEndMonth %>"
                               aria-required="true"
                               aria-label="Check end month.">
                    </div>
                    <div class="form-group form-group-year">
                        <label class="form-label" for="checkEndYear">Year</label>
                        <input class="form-control <%= error.checkEndYear ? 'form-control-error' : '' %>"
                               id="checkEndYear"
                               name="checkEndYear"
                               type="number"
                               value="<%= checkWindowData.checkEndYear %>"
                               aria-required="true"
                               aria-label="Check end day.">
                    </div>
                </div>
            </div>

            <div class="form-group">
                <p>
                    <input type="hidden" name="checkWindowId" value="<%= checkWindowData.checkWindowId %>">
                    <input class="button" type="submit" value="Save">
                    <a href="/administrator/check-windows" class="button button-secondary">Cancel</a>
                </p>
            </div>
        </form>

        <div class="back-to-top-container">
            <a href="#top">Back to top</a>
        </div>
    </div>
</div>
