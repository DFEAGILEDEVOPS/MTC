{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2019",
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"]
  },
  "exclude": [
    ".nyc_output",
    ".vscode",
    "assets",
    "bin",
    "coverage",
    "data",
    "dist",
    "karma.conf.js",
    "newrelic.js",
    "node_modules",
    "public",
    "run-jasmine.js",
    "spec",
    "tests-integration",
    "views",
    "wallaby.conf.js"
  ]
}
