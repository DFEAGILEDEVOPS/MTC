{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "exclude": [
    ".nyc_output",
    ".vscode",
    "assets",
    "bin",
    "coverage",
    "data",
    "dist",
    "karma.conf.js",
    "newrelic.js",
    "node_modules",
    "public",
    "run-jasmine.js",
    "spec",
    "tests-integration",
    "views",
    "wallaby.conf.js"
  ]
}
