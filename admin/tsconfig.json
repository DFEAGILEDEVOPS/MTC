{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "types/*"
      ]
    }
  },
  "include": [
    "authentication",
    "availability",
    "config",
    "controllers",
    "error-types",
    "helpers",
    "lib/**/*",
    "models",
    "routes",
    "services/**/*",
    "app.js",
    "config.js",
    "server.js"
  ],
