{
  "name": "pupil-api",
  "version": "0.1.0",
  "private": false,
  "license": "GPL-3.0",
  "scripts": {
    "build": "gulp scripts",
    "coverage": "nyc -r text -r html ./run-jasmine.js",
    "lint": "standard && tslint --project .",
    "start": "npm run build && node ./dist/index.js",
    "test": "npm run build && nyc -r html ./run-jasmine.js",
    "clean": "rm -rf ./dist"
  },
  "engines": {
    "node": ">= 8.4"
  },
  "dependencies": {
    "applicationinsights": "^1.0.2",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.16.2",
    "express-winston": "^2.5.1",
    "helmet": "^3.12.0",
    "moment": "^2.22.1",
    "morgan": "^1.9.0",
    "to-bool": "0.0.1",
    "uuid": "^3.3.2",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.1",
    "@types/jasmine": "^2.8.6",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.6.6",
    "@types/string": "0.0.29",
    "gulp": "^3.9.1",
    "gulp-typescript": "^4.0.2",
    "jasmine": "^2.99.0",
    "jasmine-console-reporter": "^2.0.1",
    "node-mocks-http": "^1.5.8",
    "nyc": "^11.5.0",
    "standard": "^10.0.2",
    "tslint": "^5.9.1",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "**/*Spec.js",
      "src/**/*.ts",
      "bin/**/*",
      "coverage/**/*",
      "data/**/*",
      "gulpfile.js",
      "src/spec/mocks/*",
      "tests-integration/*"
    ],
    "all": true,
    "cache": true
  }
}
