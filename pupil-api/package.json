    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.1.6"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.js",
      "**/*Spec.js",
      "src/**/*.ts",
      "bin/**/*",
