{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    ".env"
  ],
  "exclude": [
    "node_modules"
  ]
}
